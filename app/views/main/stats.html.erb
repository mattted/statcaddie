<div class="container">
  <div class="row mb-0">
    <div class="col-3 px-0">
      <h1><%= current_user.name %></h1> 
      <h5>Signup: <%= current_user.created_at.strftime("%m/%d/%Y") %></h5> 
      <p class="badge badge-secondary">Rounds Golfed: <%= current_user.rounds.count %></p>
      <p class="badge badge-secondary">Created Courses: <%= current_user.created_courses.count %></p>
    </div>
    <div class="col my-2 text-center align-self-end">
      <h6>Average Strokes</h6>
      <h4><%= current_user.average_round %></h4>
    </div>
    <div class="col my-2 text-center align-self-end">
      <h6>Average Round</h6>
      <h4><%= current_user.average_score %></h4>
    </div>
    <div class="col my-2 text-center align-self-end">
      <h6>Average Putts</h6>
      <h4><%= current_user.average_putts %></h4>
    </div>
    <div class="col my-2 text-center align-self-end">
      <h6>Average Fairways</h6>
      <h4><%= current_user.average_fairways %></h4>
    </div>
    <div class="col-2 px-0 align-self-end">
      <%= link_to 'Create Course', new_course_path, class: "btn-sm btn-primary float-right" %><br><br>
      <%= link_to 'New Round', rounds_factory_path, class: "btn-sm btn-info float-right" %><br><br>
    </div>
  </div>
</div>
<div class="row border-top border-bottom border-secondary">
    <div class="col my-3 text-center">
      <h6>Hole-In-One</h6>
      <h4><%= current_user.scorecards.hole_in_one.count %></h4>
    </div>
    <div class="col my-3 text-center">
      <h6>Albatross</h6>
      <h4><%= current_user.scorecards.albatross.count %></h4>
    </div>
    <div class="col my-3 text-center">
      <h6>Eagle</h6>
      <h4><%= current_user.scorecards.eagle.count %></h4>
    </div>
    <div class="col my-3 text-center">
      <h6>Birdie</h6>
      <h4><%= current_user.scorecards.birdie.count %></h4>
    </div>
    <div class="col my-3 text-center">
      <h6>Par</h6>
      <h4><%= current_user.scorecards.parr.count %></h4>
    </div>
    <div class="col my-3 text-center">
      <h6>Bogey</h6>
      <h4><%= current_user.scorecards.bogey.count %></h4>
    </div>
    <div class="col my-3 text-center">
      <h6>Double-Bogey</h6>
      <h4><%= current_user.scorecards.double_bogey.count %></h4>
    </div>
</div>

<div class="row mt-2">
  <div class="col">
    <ul class="list-group text-center mt-2">
      <li class="list-group-item list-group-item-secondary p-2">
        <h6 class="p-0 m-0 stat-head">Average Over/Under by Course Style</h6>
      </li>
      <% current_user.avg_by_style.each do |hash| %>
        <li class="list-group-item p-1">
          <small><%= "#{hash.keys.first} | #{hash.values.first}" %></small>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col">
    <ul class="list-group text-center mt-2">
      <li class="list-group-item list-group-item-secondary p-2">
        <h6 class="p-0 m-0 stat-head">Average Over/Under By Tee</h6>
      </li>
      <% current_user.avg_by_tee.each do |hash| %>
        <li class="list-group-item p-1">
          <small><%= "#{hash.keys.first} | #{hash.values.first}" %></small>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col">
    <ul class="list-group text-center mt-2">
      <li class="list-group-item list-group-item-secondary p-2">
        <h6 class="p-0 m-0 stat-head">Average Over/Under By Par</h6>
      </li>
      <% current_user.avg_by_par.each do |hash| %>
        <li class="list-group-item p-1">
          <small><%= "Par #{hash.keys.first} | #{hash.values.first}" %></small>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="container p-0">
  <h5 class="mt-4">Best Rounds</h5>
    <% if current_user.rounds.blank? %>
      <h6 class="mb-5">No rounds yet...</h6>
    <% else %>
    <table class="table nord text-center mb-5">
      <thead class="thead nord-head">
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Course</th>
          <th scope="col">Tees</th>
          <th scope="col">Par</th>
          <th scope="col">Strokes</th>
          <th scope="col">Over/Under</th>
          <th scope="col">Round</th>
        </tr>
      </thead>

      <tbody>
        <% current_user.best_rounds.each do |round| %>
          <tr>
            <td><%= round.datef %></td>
            <td><%= round.course.name %></td>
            <td><%= round.tee %></td>
            <td><%= round.par %></td>
            <td><%= round.total %></td>
            <td><%= round.over_under %></td>
            <td><%= link_to 'View', round, class: "btn-sm btn-secondary" %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
</div>
<div class="container p-0">
  <h5 class="mt-4">Best Holes</h5>
    <% if current_user.scorecards.blank? %>
      <h6 class="mb-5">No holes golfed yet...</h6>
    <% else %>
    <table class="table nord text-center mb-5">
      <thead class="thead nord-head">
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Hole/Course</th>
          <th scope="col">Tees</th>
          <th scope="col">Par</th>
          <th scope="col">Strokes</th>
          <th scope="col">Over/Under</th>
          <th scope="col">Round</th>
        </tr>
      </thead>

      <tbody>
        <% current_user.best_holes.each do |hole| %>
          <tr>
            <td><%= hole.round.datef %></td>
            <td>#<%= hole.hole_number %> <%= hole.round.course.name %></td>
            <td><%= hole.round.tee %></td>
            <td><%= hole.par %></td>
            <td><%= hole.strokes %></td>
            <td><%= hole.over_under %></td>
            <td><%= link_to 'View', hole.round, class: "btn-sm btn-secondary" %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
</div>
