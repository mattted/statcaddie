<div class="container">
  <div class="row">
    <div class="col-8 pl-0 mb-4">
      <h1><%= course.name %></h1> 
      <h5><%= "#{course.city}, #{course.state}" %></h5> 
      <p class="badge badge-secondary"><%= course.access %></p>
      <p class="badge badge-secondary"><%= course.style %></p>
    </div>
    <div class="col mb-4 pb-3 pt-2 pr-0 align-self-end">
      <%= link_to 'Edit Course', edit_course_path(course), class: "btn-sm btn-secondary float-right" %><br><br>
      <%= link_to 'Delete Course', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger float-right" %>
    </div>
  </div>
</div>
