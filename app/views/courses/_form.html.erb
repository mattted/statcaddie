<%= form_with model: course, local: true do |f| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :creator_id, value: current_user.id %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :style %><br>
    <%= f.select :style, options_for_select(%w(Links Parkland Desert)), { include_blank: true }, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.label :access %>
    <%= f.select :access, options_for_select(%w(Public Semi-Private Private Resort)), { include_blank: true }, { class: "form-control" } %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

