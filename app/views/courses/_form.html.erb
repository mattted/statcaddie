<%= form_with model: course, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :style %><br>
    <%= f.select :style, options_for_select(%w(Links Parkland Desert)), { include_blank: true }, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.label :access %>
    <%= f.select :access, options_for_select(%w(Public Semi-Private Private Resort)), { include_blank: true }, { class: "form-control" } %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

